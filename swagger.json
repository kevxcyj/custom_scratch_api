{
  "openapi": "3.0.0",
  "info": {
    "title": "Netflix Movies & TV Shows API",
    "version": "1.0.0",
    "description": "An API for browsing Netflix titles (Movies and TV Shows)."
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    }
  ],
  "paths": {
    "/titles": {
      "get": {
        "summary": "Get all titles with optional filters and pagination",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": { "type": "integer" },
            "description": "Page number for pagination"
          },
          {
            "name": "limit",
            "in": "query",
            "schema": { "type": "integer" },
            "description": "Number of results per page"
          },
          {
            "name": "type",
            "in": "query",
            "schema": { "type": "string" },
            "description": "Filter by type (e.g., Movie, TV Show)"
          },
          {
            "name": "genre",
            "in": "query",
            "schema": { "type": "string" },
            "description": "Filter by genre (e.g., Drama, Comedy)"
          },
          {
            "name": "release_year",
            "in": "query",
            "schema": { "type": "integer" },
            "description": "Filter by release year (e.g., 2019)"
          }
        ],
        "responses": {
          "200": {
            "description": "List of titles",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Title"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/titles/{id}": {
      "get": {
        "summary": "Get a single title by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "The ID of the title"
          }
        ],
        "responses": {
          "200": {
            "description": "A single title",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Title"
                }
              }
            }
          },
          "404": {
            "description": "Title not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Title": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Breaking Bad"
          },
          "type": {
            "type": "string",
            "example": "TV Show"
          },
          "listed_in": {
            "type": "string",
            "example": "Drama"
          },
          "release_year": {
            "type": "integer",
            "example": 2008
          },
          "date_added": {
            "type": "string",
            "format": "date",
            "example": "2013-09-29"
          },
          "country": {
            "type": "string",
            "example": "United States"
          }
        }
      }
    }
  }
}