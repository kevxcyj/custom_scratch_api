{
  "openapi": "3.0.0",
  "info": {
    "title": "Netflix Movies & TV Shows API",
    "version": "1.0.0",
    "description": "An API for browsing Netflix titles (Movies and TV Shows)."
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    }
  ],
  "paths": {
    "/titles": {
      "get": {
        "summary": "Get all titles",
        "description": "Returns a paginated list of titles. You can filter by type and genre.",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number (default 1)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of results per page (default 10)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "type",
            "in": "query",
            "description": "Filter by type (Movie or TV Show)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["Movie", "TV Show"]
            }
          },
          {
            "name": "genre",
            "in": "query",
            "description": "Filter by genre (partial match, case-insensitive)",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of titles",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Title"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Title": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Breaking Bad"
          },
          "type": {
            "type": "string",
            "example": "TV Show"
          },
          "listed_in": {
            "type": "string",
            "example": "Drama"
          },
          "release_year": {
            "type": "integer",
            "example": 2008
          },
          "date_added": {
            "type": "string",
            "format": "date",
            "example": "2013-09-29"
          },
          "country": {
            "type": "string",
            "example": "United States"
          }
        }
      }
    }
  }
}